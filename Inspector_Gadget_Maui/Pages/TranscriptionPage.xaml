<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:controls="clr-namespace:Inspector_Gadget_Maui.Controls"
             x:Class="Inspector_Gadget_Maui.TranscriptionPage"
             Title="Inspector Gadget by Indico">
    <ContentPage.Resources>
        <LinearGradientBrush x:Key="paneBackground" EndPoint="0,1">
            <GradientStop Offset="0" Color="#FF0A172B" />
            <GradientStop Offset="1" Color="#FF264289" />
        </LinearGradientBrush>
    </ContentPage.Resources>
    <ScrollView>
        <Grid Margin="10" ColumnSpacing="10" RowSpacing="10" Background="{StaticResource paneBackground}" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <!-- Player -->
            <Grid RowDefinitions="*,Auto"  Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="12">
                <controls:Video x:Name="video"  Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="12" IsLooping="True"/>
            </Grid>
            
            <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" FontAttributes="Bold" Text="Transcript" TextColor="White"/>
                <RefreshView x:Name="rfTranscription" IsRefreshing="False"  Grid.Row="1" Grid.Column="0">
                <ScrollView Grid.Row="1" Grid.Column="0"
                            HorizontalOptions="Fill"
                            VerticalScrollBarVisibility="Default">
                    <Editor x:Name="tbx_input" Grid.Row="1" Grid.Column="0" Placeholder="Transcript..." PlaceholderColor="DarkGray" AutoSize="TextChanges" Background="lightgray" 
                         HeightRequest="250" TextChanged="tbx_input_TextChanged"/>
                    </ScrollView>
                </RefreshView>
            </Grid>

            <Button Grid.Row="2" Grid.Column="10" Grid.ColumnSpan="2" x:Name="btnProcessText" IsEnabled="False" Text="Process text" Clicked="BtnProcessText_Clicked" HorizontalOptions="Fill" />

            <Editor x:Name="edSearch" Grid.Row="3"  Grid.Column="0"  Grid.ColumnSpan="11"   Placeholder="Search.."  PlaceholderColor="DarkGray" Background="lightgray"/>
            <Button x:Name="btnSearch" Grid.Row="3"  Grid.Column="12" Text="Search" Clicked="btnSearch_Clicked"/>
  

            <Grid Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="12" ColumnSpacing="10" RowSpacing="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" FontAttributes="Bold" Text="TLDR" TextColor="White"/>
                <Label Grid.Row="0" Grid.Column="1" FontAttributes="Bold" Text="Keywords" TextColor="White"/>
                <Label Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="4" FontAttributes="Bold" Text="ESRB" TextColor="White"/>

                <ScrollView Grid.Row="1" Grid.Column="0"
                            HorizontalOptions="Fill"
                            VerticalScrollBarVisibility="Default"
                            MaximumHeightRequest="150">
                    <Editor x:Name="tbx_output"  Grid.Row="1" Grid.Column="0" Placeholder="TLDR..." AutoSize="TextChanges" PlaceholderColor="DarkGray" Background="lightgray" IsReadOnly="True" />
                </ScrollView>
                <ScrollView Grid.Row="1" Grid.Column="1"
                            HorizontalOptions="Fill"
                            VerticalScrollBarVisibility="Default"
                            MaximumHeightRequest="150">
                    <Editor x:Name="tbx_keywords" Grid.Row="1" Grid.Column="1" Placeholder="Kewords..." AutoSize="TextChanges" PlaceholderColor="DarkGray" Background="lightgray" IsReadOnly="True" />
                </ScrollView>
                <ScrollView Grid.Row="1" Grid.Column="2"
                            HorizontalOptions="Fill"
                            VerticalScrollBarVisibility="Default"
                            MaximumHeightRequest="150">
                        <Editor x:Name="tbx_esrb"  Grid.Row="1" Grid.Column="2" Placeholder="ESRB..." AutoSize="TextChanges" PlaceholderColor="DarkGray" Background="lightgray" IsReadOnly="True" />
            </ScrollView>
                </Grid>
        </Grid>
    </ScrollView>
</ContentPage>