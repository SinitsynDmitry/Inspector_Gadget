<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Inspector_Gadget_Maui.Settings"
             Title="Settings">

    <ContentPage.Resources>
        <LinearGradientBrush x:Key="paneBackground" EndPoint="0,1">
            <GradientStop Offset="0" Color="#FF0A172B" />
            <GradientStop Offset="1" Color="#FF264289" />
        </LinearGradientBrush>
    </ContentPage.Resources>
    <Grid  Background="{StaticResource paneBackground}">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ScrollView x:Name="gbWhisperSettings" Grid.Row="0" Header="Whisper">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label x:Name="tbLanguages" Text="Languages" Grid.Row="0" Grid.Column ="0" VerticalAlignment="Center" Width="120" Margin="20,0"/>
                <ComboBox x:Name="cmbLanguages" HorizontalAlignment="Left" Grid.Row="0" Grid.Column ="1" VerticalAlignment="Center" Width="120"/>
                <Label x:Name="tbModels" Text="Models" Grid.Row="1" Grid.Column ="0" VerticalAlignment="Center" Width="120"  Margin="20,0"/>
                <ComboBox x:Name="cmbBoxModels" HorizontalAlignment="Left" Grid.Row="1"  Grid.Column ="1" VerticalAlignment="Center" Width="120"/>

                <Label x:Name="tbWhisperPath" Text="Whisper .exe path" Grid.Row="2" Grid.Column ="0" VerticalAlignment="Center" Width="120"  Margin="20,0"/>
                <Label x:Name="tbWhisperPathSelected" Text="" Grid.Row="2" Grid.Column ="1" VerticalAlignment="Center" Width="120"  Margin="20,0"/>
                <Button x:Name="btnSelectFolder" Grid.Row="2" Grid.Column ="1" Click="btnSelectFolder_Click" Width=" 20" Content=".."/>

            </Grid>
        </ScrollView>
        <GroupBox x:Name="gbTLDRSettings" Grid.Row="1" Header="TLDR">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label x:Name="tbtemperature" Text="Temperature" Grid.Row="0" Grid.Column ="0" VerticalAlignment="Center" Width="120" Margin="20,0"/>
                <Editor x:Name="cmbTemperature" HorizontalAlignment="Left" Grid.Row="0" Grid.Column ="1" VerticalAlignment="Center" Width="30"  Text="0.7"/>
                <Label x:Name="tbtemperatureÐ”" Text="Value from 0 to 1" Grid.Row="0" Grid.Column ="2" VerticalAlignment="Center" Width="120" Margin="5,0"/>

                <Label x:Name="tbTokens" Text="Tokens" Grid.Row="1" Grid.Column ="0" VerticalAlignment="Center" Width="120"  Margin="20,0"/>
                <Editor x:Name="cmbTokens" HorizontalAlignment="Left" Grid.Row="1"  Grid.Column ="1" VerticalAlignment="Center" Width="30"  Text="60"/>
                <Label x:Name="tbTokensL" Text="Value from 0 to 2048" Grid.Row="1" Grid.Column ="3" VerticalAlignment="Center" Width="120"  Margin="5,0"/>

                <Label x:Name="tbtop" Text="Top_p" Grid.Row="2" Grid.Column ="0" VerticalAlignment="Center" Width="120" Margin="20,0"/>
                <Editor x:Name="tbTop" HorizontalAlignment="Left" Grid.Row="2" Grid.Column ="1" VerticalAlignment="Center" Width="30" Text="1.0"/>
                <Label x:Name="tbtopL" Text="Value from 0 to 1" Grid.Row="2" Grid.Column ="3" VerticalAlignment="Center" Width="120" Margin="5,0"/>

                <Label x:Name="tbfrequencyPenalty" Text="Frequency penalty" Grid.Row="3" Grid.Column ="0" VerticalAlignment="Center" Width="120"  Margin="20,0"/>
                <Editor x:Name="txfrequencyPenalty" HorizontalAlignment="Left" Grid.Row="3"  Grid.Column ="1" VerticalAlignment="Center" Width="30"  Text="0.0"/>
                <Label x:Name="tbfrequencyPenaltyL" Text="Value from -2.0 to 2.0" Grid.Row="3" Grid.Column ="3" VerticalAlignment="Center" Width="120"  Margin="5,0"/>

                <Label x:Name="tblpresencePenalty" Text="Presence penalty" Grid.Row="4" Grid.Column ="0" VerticalAlignment="Center" Width="120" Margin="20,0"/>
                <Editor x:Name="tbpresencePenalty" HorizontalAlignment="Left" Grid.Row="4" Grid.Column ="1" VerticalAlignment="Center" Width="30"  Text="1.0"/>
                <Label x:Name="tblpresencePenaltyL" Text="Value from -2.0 to 2.0" Grid.Row="4" Grid.Column ="3" VerticalAlignment="Center" Width="120" Margin="5,0"/>
            </Grid>
        </GroupBox>
    </Grid>
</ContentPage>